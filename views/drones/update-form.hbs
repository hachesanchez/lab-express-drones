<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <h1>Editar dron {{name}}</h1>
            <hr>

            <form action="/drones/{{id}}/edit" method="POST">
                <div class="mb-3 mt-5">
                    <label for="dronName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="dronName" name='name' value="{{name}}">
                </div>

                <div class="mb-3 mt-5">
                    <label for="dronPropellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="dronPropellers" name='propellers'
                        value="{{propellers}}">
                </div>

                <div class="mb-3 mt-5">
                    <label for="dronMaxSpeed" class="form-label">Max Speed</label>
                    <input type="text" class="form-control" id="dronMaxspeed" name='maxSpeed' value="{{maxSpeed}}">
                </div>

                <button type="submit" class="btn btn-dark">Edita el dron</button>

            </form>

        </div>
    </div>

</div>